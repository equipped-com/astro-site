{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"incremental": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"types": ["@cloudflare/workers-types"],
		"lib": ["ESNext", "DOM", "DOM.Iterable"]
	},
	"include": ["src/**/*", "src/env.d.ts", "astro.config.ts"],
	"exclude": ["node_modules", "dist"]
}
