{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"incremental": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*", "astro.config.ts"],
	"exclude": ["node_modules", "dist"]
}
