---
import { ClerkProvider } from '@clerk/clerk-react'
import BrandTable from '@/components/admin/catalog/BrandTable'
import AdminLayout from '@/layouts/AdminLayout.astro'

const publishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY
---

<AdminLayout title="Brand Management - Equipped Admin">
	<div class="space-y-6">
		<div>
			<h1 class="text-3xl font-bold">Brand Management</h1>
			<p class="text-muted-foreground mt-2">
				Manage global product brands. All changes affect the entire catalog.
			</p>
		</div>

		<ClerkProvider
			publishableKey={publishableKey}
			client:only="react"
		>
			<BrandTable client:only="react" />
		</ClerkProvider>
	</div>
</AdminLayout>
