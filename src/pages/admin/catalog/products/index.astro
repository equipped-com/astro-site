---
import { ClerkProvider } from '@clerk/clerk-react'
import ProductTable from '@/components/admin/catalog/ProductTable'
import AdminLayout from '@/layouts/AdminLayout.astro'

const publishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY
---

<AdminLayout title="Product Management - Equipped Admin">
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div>
				<h1 class="text-3xl font-bold">Product Catalog</h1>
				<p class="text-muted-foreground mt-2">
					Manage global product catalog. All changes affect the entire system.
				</p>
			</div>
			<div class="flex items-center gap-4">
				<a
					href="/admin/catalog/brands"
					class="rounded-md border border-input px-4 py-2 text-sm font-medium hover:bg-accent"
				>
					Manage Brands
				</a>
				<a
					href="/admin/catalog/inventory"
					class="rounded-md border border-input px-4 py-2 text-sm font-medium hover:bg-accent"
				>
					View Inventory
				</a>
			</div>
		</div>

		<ClerkProvider
			publishableKey={publishableKey}
			client:only="react"
		>
			<ProductTable client:only="react" />
		</ClerkProvider>
	</div>
</AdminLayout>
