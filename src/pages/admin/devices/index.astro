---
import { ClerkProvider } from '@clerk/clerk-react'
import GlobalDeviceView from '@/components/admin/GlobalDeviceView'
import AdminLayout from '@/layouts/AdminLayout.astro'

const publishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY
---

<AdminLayout title="Global Devices - Admin Dashboard">
	<div class="space-y-6">
		<div>
			<h1 class="text-3xl font-bold">Global Device View</h1>
			<p class="text-muted-foreground mt-2">
				View and manage all devices across all customer accounts
			</p>
		</div>

		<ClerkProvider
			publishableKey={publishableKey}
			client:only="react"
		>
			<GlobalDeviceView client:only="react" />
		</ClerkProvider>
	</div>
</AdminLayout>
