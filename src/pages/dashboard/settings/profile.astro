---
import { ChevronLeft } from 'lucide-react'
import PrimaryAccountSelector from '@/components/settings/PrimaryAccountSelector'
import DashboardLayout from '@/layouts/DashboardLayout.astro'
---

<DashboardLayout title="Profile Settings">
	<div class="max-w-4xl mx-auto">
		<div class="mb-6">
			<a
				href="/dashboard/settings"
				class="inline-flex items-center text-sm text-muted-foreground hover:text-foreground"
			>
				<ChevronLeft size={16} class="mr-1" />
				Back to Settings
			</a>
		</div>

		<div class="space-y-8">
			<!-- Page Header -->
			<div>
				<h1 class="text-3xl font-bold">Profile Settings</h1>
				<p class="text-muted-foreground mt-2">Manage your account and default workspace</p>
			</div>

			<!-- Primary Account Selector -->
			<div class="border rounded-lg p-6">
				<PrimaryAccountSelector client:only="react" />
			</div>
		</div>
	</div>
</DashboardLayout>
