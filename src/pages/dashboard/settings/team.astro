---
import { ChevronLeft, Users } from 'lucide-react'
import TeamAccessManager from '@/components/settings/TeamAccessManager.tsx'
import DashboardLayout from '@/layouts/DashboardLayout.astro'

// Mock account context for now (will be replaced with real auth)
const accountId = 'acct-123'
const role = 'owner' as const
---

<DashboardLayout title="Team Access">
	<div class="max-w-6xl mx-auto">
		<div class="mb-6">
			<a
				href="/dashboard/settings"
				class="inline-flex items-center text-sm text-muted-foreground hover:text-foreground"
			>
				<ChevronLeft size={16} class="mr-1" />
				Back to Settings
			</a>
		</div>

		<div class="mb-6">
			<div class="flex items-center gap-3">
				<div class="p-2 rounded-lg bg-primary/10 text-primary">
					<Users size={24} />
				</div>
				<div>
					<h1 class="text-3xl font-bold">Team Access</h1>
					<p class="text-muted-foreground mt-1">
						Manage who has access to your account and their roles
					</p>
				</div>
			</div>
		</div>

		<TeamAccessManager client:only="react" accountId={accountId} role={role} />
	</div>
</DashboardLayout>
