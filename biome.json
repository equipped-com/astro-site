{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/build", "!**/.git", "!**/.astro"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useConst": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noVar": "error"
			},
			"correctness": {
				"noUnusedImports": "off",
				"noUnusedVariables": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		},
		"linter": {
			"enabled": false
		}
	},
	"overrides": [
		{
			"includes": ["*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.test.ts", "**/*.test.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noArrayIndexKey": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"a11y": {
						"useValidAriaRole": "off"
					}
				}
			}
		},
		{
			"includes": ["src/components/**/*.tsx", "src/components/**/*.ts"],
			"linter": {
				"rules": {
					"a11y": {
						"useButtonType": "warn",
						"useSemanticElements": "warn",
						"noLabelWithoutControl": "warn",
						"noStaticElementInteractions": "warn",
						"useKeyWithClickEvents": "warn",
						"noSvgWithoutTitle": "warn"
					},
					"suspicious": {
						"noArrayIndexKey": "warn"
					}
				}
			}
		},
		{
			"includes": ["src/types/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
